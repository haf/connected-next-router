{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module":"commonjs",
    "moduleResolution": "node",
    "outDir": "dist/es5",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [ "node_modules/@types" ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
